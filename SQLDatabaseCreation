USE ProcessDB;

DROP TABLE IF EXISTS INGREDIENT;
DROP TABLE IF EXISTS CANCER;
DROP TABLE IF EXISTS CANCERLINK;
CREATE TABLE INGREDIENT (
	INGREDIENTNAME VARCHAR(50), 
	ID INT,
	PRIMARY KEY(ID)
	);
CREATE TABLE CANCER(
	CANCERNAME VARCHAR(50),
	ID INT,
	PRIMARY KEY(ID)
);
CREATE TABLE CANCERLINK(
   INGREDIENTID INT,
   CANCERID INT,
   AMM INT,
	FOREIGN KEY (INGREDIENTID) REFERENCES INGREDIENT(ID) ON UPDATE CASCADE,
	FOREIGN KEY (CANCERID)     REFERENCES CANCER(ID)     ON UPDATE CASCADE,
	PRIMARY KEY (INGREDIENTID, CANCERID)	
);